@{
    ViewData["Title"] = "Nova Tarefa";
}

<main>
    <h1 class="fs-4 text-center">Nova Tarefa</h1>

    <div class="d-flex flex-column align-items-center gap-2">
        <div class="mb-3">
            <label for="title" class="form-label">Título</label>
            <input type="title" class="form-control form-control-sm" id="title" placeholder="Estudar ASP.NET">
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Descrição</label>
            <input type="description" class="form-control form-control-sm" id="description"
                placeholder="Estrutura e Razor pages">
        </div>

        <div class="d-flex text-center gap-2">
            <button class="btn btn-sm btn-outline-danger">Cancelar</button>
            <button class="btn btn-sm btn-success">Salvar</button>
        </div>
    </div>
</main>
