@using System.Globalization;
@{
    ViewData["Title"] = "Tarefas Concluídas";

    var task1 = new TaskModel
            {
                Id = 1,
                Title = "Estudar ASP.NET",
                CreatedAt = new DateTime(2023, 2, 1),
                Description = "Estrutura e Razor pages",
                CompletedAt = new DateTime(2023, 2, 3)
            };
    var task2 = new TaskModel
            {
                Id = 2,
                Title = "Estudar SQL",
                CreatedAt = new DateTime(2023, 2, 2),
                Description = "SELECT e JOIN",
                CompletedAt = new DateTime(2023, 2, 5)
            };

    var tasks = new List<TaskModel> { task1, task2 };
}

<main class="text-center">
    <h1 class="fs-4">Concluídas</h1>

    <div class="d-flex flex-column align-items-center gap-2">
        @foreach (var task in tasks)
        {
            <div class="card text-start" style="width: 18rem;">
                <div class="card-header">
                    <h5 class="card-title fs-6 mb-0">@task.Title</h5>
                </div>

                <div class="card-body pt-2 pb-2">
                    <p class="card-text mb-1">@task.Description</p>

                    <p class="fw-bold">Criado em: <span class="fw-normal">@task.CreatedAt.ToString(new
                        CultureInfo("pt-br"))</span></p>

                    <p class="fw-bold">Status: <span class="fw-normal">@(@task.CompletedAt != null ? "Concluída" :
                        "Pendente")</span>
                    </p>
                </div>

                <div class="card-footer d-flex justify-content-between">
                    <button type="button" class="btn btn-sm btn-outline-dark">Reabrir</button>
                </div>
            </div>
        }
    </div>
</main>
